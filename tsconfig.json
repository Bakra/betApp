{
  "compilerOptions": {
    "target": "ES2017", // Use ES2017 or higher
    "module": "ESNext",
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "types": ["jest", "pixi.js"],
    "lib": ["ES2017", "DOM"],
    "skipLibCheck": true // Optional: Skips type checking of declaration files
  },
  "include": ["src/**/*", "tests/**/*"]
}
